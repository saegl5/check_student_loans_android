<?xml version="1.0" encoding="utf-8"?>

<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:bottom="-1dp">
        <shape
            android:shape="oval" >

            <size
                android:height="25dp"
                android:width="25dp"/>

            <solid android:color="#80000000" />

            <stroke
                android:width="2dp"
                android:color="#00000000" />

        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">

            <size
                android:height="25dp"
                android:width="25dp"/>

            <solid android:color="#FFFFFF" />

            <stroke
                android:width="2dp"
                android:color="#00000000" />

        </shape>
    </item>

</layer-list>